{
  "extends": ["stylelint-config-standard", "stylelint-config-recommended-vue"],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "layer"]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["fluid", "theme", "v-bind"]
      }
    ],
    "at-rule-empty-line-before": [
      "always",
      { "ignoreAtRules": ["tailwind", "apply", "layer"] }
    ]
  }
}
